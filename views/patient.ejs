<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</head>
<section class="testimonial py-5" id="testimonial">
    <div class="container">
        <div class="row ">
            <div class="col-md-4 py-5 bg-secondary text-white text-center ">
                <div class=" ">
                    <div class="card-body">
                        <img src="http://www.ansonika.com/mavia/img/registration_bg.svg" style="width:30%">
                        <h2 class="py-3">Patient Registration Form</h2>
                      <h4 style="color:black"><%=patient_title%></h4>
                    </div>
                </div>
            </div>
            <div class="col-md-8 py-5 border">
                <h4 class="pb-4">Please fill with your details</h4>
                <form action="/patient" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input id="Full Name" name="firstname" placeholder="Full Name" class="form-control"
                                type="text">
                        </div>
                        <div class="form-group col-md-6">
                            <input type="email" name="email" class="form-control" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input id="Mobile No." name="phone" placeholder="Mobile No." class="form-control"
                                required="required" type="text">
                        </div>
                        <div class="form-group col-md-6">

                            <select id="inputState" name="bloodGroup" class="form-control">
                                <option selected>Blood group</option>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                            </select>
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input id="location" name="location" placeholder="Location" class="form-control"
                                type="text">

                        </div>
                        <div class="form-group col-md-6">
                            <input id="age" name="age" placeholder="Age" class="form-control" type="text">
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>
                                Gender :
                            </label>
                            <input type="radio" value="Male" name="gender" checked> Male
                            <input type="radio" value="Female" name="gender"> Female
                            <input type="radio" value="Other" name="gender"> Other
                        </div>

                    </div>
                    <br></br>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label> Do you have a laboratory confirmed diagnosis of COVID-19?</label><br>
                            <input type="radio" name="a">Yes
                            <input type="radio" name="a">No
                            </br>
                        </div>

                    </div>
                    <br></br>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label> >> Do you have a doctorâ€™s prescription or case sheet?</label><br>
                            <input type="radio" name="b">Yes
                            <input type="radio" name="b">No
                            </br>
                        </div>

                    </div>
                    <br></br>



                        <button type="submit" class="btn btn-danger">Submit</button>

                </form>
                <form action="/thank" method="post">
                <table id="down" style="width:100%">

        <tr>
          <th>Serial no.</th>
          <th>Name</th>
          <th>Phone no.</th>
          <th>Select</th>
        </tr>

        <% for (var i = 0; i < list.length-1;  i++) { %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= list[i].name %></td>
          <td><%= list[i].phone %></td>
          <td><button type="submit" value="<%=list[i].email%>" name="get_the_id">Request</button></td>

        </tr>
        <% } %>
      </table>
    </form>
            </div>
        </div>
    </div>
</section>
